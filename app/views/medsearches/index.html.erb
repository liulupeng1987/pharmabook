<div class="col-md-12">

  <h2 class="text-center"> User search finished medicine list </h2>
  <p>
  Download:
  <%= link_to "CSV",medsearches_path(format: "csv") %> |
  <%= link_to "Excel", medsearches_path(format: "xls") %>
</p>

  <table class="table">
      <thead>
        <tr>
          <td>ID</td>
          <td>User's email</td>
          <td>Company</td>
          <td>Country</td>
          <td>Query medicine</td>
          <td>Search Time</td>
        </tr>
      </thead>
      <tbody>
        <% @medsearches.each do |medsearch| %>
        <tr>
          <td><%= medsearch.id %></td>
          <td><%= medsearch.user.email %></td>
          <td><%= medsearch.user.company %></td>
          <td><%= medsearch.user.country %></td>
          <td><%= medsearch.query %></td>
          <td><%= medsearch.created_at%></td>
        </tr>
        <% end %>
      </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @medsearches %>
  </div>

</div>

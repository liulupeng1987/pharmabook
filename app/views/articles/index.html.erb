<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Articles</h1>

      <table class="table table-boldered">
        <thead>
          <tr>
            <th>Title</th>
            <th colspan="3"></th>
          </tr>
        </thead>

      <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %></td>
              <td><%= link_to 'Show', article %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

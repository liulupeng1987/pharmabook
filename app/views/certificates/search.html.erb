<%= render "searchbox" %>

<div class="container top-margin">
  <div class="row">
    <div class="alert alert-dismissable alert-success">
      <button class="close" data-dismiss="alert">x</button>
      <p> If you can't get satisfied search results, please contact <a href="mailto:lupengliu@gmail.com?Subject=Hello%20pharmabook" target="_top">lupengliu@gmail.com</a> for help.</p>
    </div>

    <table class="table table-boldered">
      <thead>
        <tr class="active">
          <td><strong>Manufacturer</strong></td>
          <td align="center"><strong>Fda</strong></td>
          <td align="center"><strong>Eu GMP</strong></td>
          <td align="center"><strong>WHO-PQ</strong></td>
          <td align="center"><strong>Other Pic/s</strong></td>
          <td><strong>Manufacturer website</strong></td>
          <td><strong>Email</strong></td>
        </tr>
      </thead>

      <tbody>
        <% @certificates.each do |certificate| %>
        <tr>
          <td>
            <%= link_to(certificate.manufacturer, medicine_manufacturer_path(certificate.medicine_manufacturer)) %>
          </td>
          <td align="center">
            <%= certificate.fda %>
          </td>
          <td align="center">
            <%= certificate.eu %>
          </td>
          <td align="center">
            <%= certificate.who %>
          </td>
          <td align="center">
            <%= certificate.pics %>
          </td>
          <td><%= certificate.medicine_manufacturer.website%></td>
          <td><%= certificate.medicine_manufacturer.email%></td>
          <% if current_user.admin? %>
            <td>
              <%= link_to("Edit", edit_admin_certificate_path(certificate)) %> |
              <%= link_to("Destroy", admin_certificate_path(certificate), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
            </td>
          <% end %>

        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @certificates %>
    </div>

  </div>
</div>

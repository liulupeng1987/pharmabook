<div class="bs-docs-header" id="content" tabindex="-1" style="">
      <div class="container">
        <h3 style="">Search Finished dosage Manufacturers with US-FDA EU WHO or other PIC/S GMP</h3>
        <p style="">Please input manufacturer's name or dosage form to search.</p>

        <div id="custom-search-input">
          <%= form_tag search_certificates_path, :method => :get  do %>
            <div class="input-group col-md-12">
                <input type="text" class="form-control input-sm" name="search" value="<%= params[:search] %>" placeholder="dosage form or manufacturer name...">
                <span class="input-group-btn">
                    <button class="btn btn-info btn-sm" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
          <% end %>
        </div>
  </div>
</div>

<div class="row">
  <% if flash.any? %>
    <% user_facing_flashes.each do |key, value| %>
      <div class="top-margin60 alert alert-dismissable alert-<%= flash_class(key) %>">
        <button class="close" data-dismiss="alert">x</button>
        <%= value %>
      </div>
    <% end %>
  <% end %>
</div>

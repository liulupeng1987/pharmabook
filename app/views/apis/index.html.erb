<%= render "searchbox" %>

<div class="container top-margin">

  <div class="row">


    <table class="table table-boldered">
      <thead>
        <tr>
          <td>Name</td>
          <td>License number</td>
          <td>Manufacturer name</td>
          <td>Manufacturer website</td>
          <td>Email</td>
        </tr>
      </thead>

      <tbody>
        <% @apis.each do |api| %>
        <tr>
          <td>
            <%= api.name %>
          </td>
          <td>
            <%= api.number %>
          </td>
          <td>
            <%= link_to(api.medicine_manufacturer.name, medicine_manufacturer_path(api.medicine_manufacturer)) %>
          </td>
          <td><%= api.medicine_manufacturer.website%></td>
          <td><%= api.medicine_manufacturer.email%></td>

        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @apis %>
    </div>

  </div>
</div>

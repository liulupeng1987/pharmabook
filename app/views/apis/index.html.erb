<div class="container top-margin">
  <div class="row">

    <table class="table table-boldered">
      <thead>
        <tr>
          <td>Name</td>
          <td>License number</td>
          <td>Manufacturer name</td>
        </tr>
      </thead>

      <tbody>
        <% @apis.each do |api| %>
        <tr>
          <td>
            <%= api.name %>
          </td>
          <td>
            <%= api.number %>
          </td>
          <td>
            <%= api.manufacturer %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @apis %>

  </div>
</div>

<%= render "searchbox" %>

<div class="container top-margin">
  <div class="row">
    <div class="alert alert-dismissable alert-success">
      <button class="close" data-dismiss="alert">x</button>
      <p> If you can't get satisfied search results, please contact <a href="mailto:lupengliu@gmail.com?Subject=Hello%20pharmabook" target="_top">lupengliu@gmail.com</a> for help.</p>
    </div>

    <table class="table table-boldered">
      <thead>
        <tr>
          <td>Name</td>
          <td>License number</td>
          <td>Manufacturer name</td>
          <td>Manufacturer website</td>
          <td>Email</td>
        </tr>
      </thead>

      <tbody>
        <% @apis.each do |api| %>
        <tr>
          <td><%= api.name %></td>
          <td><%= api.number %></td>
          <td><%= link_to(api.medicine_manufacturer.name, medicine_manufacturer_path(api.medicine_manufacturer)) %></td>
          <td><%= api.medicine_manufacturer.website%></td>
          <td><%= api.medicine_manufacturer.email%></td>
          <% if current_user.admin? %>
            <td>
              <%= link_to("Edit", edit_admin_api_path(api)) %> |
              <%= link_to("Destroy", admin_api_path(api), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
            </td>
          <% end %>

        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @apis %>
    </div>

  </div>
</div>

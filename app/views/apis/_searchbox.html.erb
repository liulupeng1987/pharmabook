<div class="bs-docs-header" id="content" tabindex="-1" style="">
      <div class="container">
        <h1 style="">Search APIs</h1>
        <p style="">Please input an Api name or a manufacturer's name to search.</p>

        <div id="custom-search-input">
          <%= form_tag search_apis_path, :method => :get  do %>
            <div class="input-group col-md-12">
                <input type="text" class="form-control input-sm" name="search" value="<%= params[:search] %>" placeholder="api name or manufacturer name...">
                <span class="input-group-btn">
                    <button class="btn btn-info btn-sm" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
          <% end %>
        </div>
  </div>
</div>

<%= render "searchbox" %>

<div class="container top-margin">
  <div class="row">
    <div class="alert alert-dismissable alert-success">
      <button class="close" data-dismiss="alert">x</button>
      <p> If you can't get satisfied search results, please contact <a href="mailto:lupengliu@gmail.com?Subject=Hello%20pharmabook" target="_top">lupengliu@gmail.com</a> for help.</p>
    </div>

    <table class="table table-boldered">
      <thead>
        <tr>
          <td>Medicine Name</td>
          <td>Strength</td>
          <td>ANDA number</td>
          <td>Manufacturer</td>
          <td>Manufacturer website</td>
          <td>Email</td>
        </tr>
      </thead>

      <tbody>
        <% @andas.each do |anda| %>
        <tr>
          <td><%= anda.product %></td>
          <td><%= anda.strength %></td>
          <td><%= anda.number %></td>
          <td><%= link_to(anda.manufacturer, medicine_manufacturer_path(anda.medicine_manufacturer)) %></td>
          <td><%= anda.medicine_manufacturer.website%></td>
          <td><%= anda.medicine_manufacturer.email%></td>
          <% if current_user.admin? %>
            <td>
              <%= link_to("Edit", edit_admin_anda_path(anda)) %> |
              <%= link_to("Destroy", admin_anda_path(anda), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
            </td>
          <% end %>

        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @andas %>
    </div>

  </div>
</div>

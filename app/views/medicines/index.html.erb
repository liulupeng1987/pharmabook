<%= render "searchbox" %>
<div class="container top-margin">

  <div class="row">


    <table class="table table-boldered">
      <thead>
        <tr>
          <td>Name</td>
          <td>License number</td>
          <td>Strength</td>
          <td class="text-center">Manufacturer name <br>(click to show manufacturer's contact information)</td>
        </tr>
      </thead>

      <tbody>
        <% @medicines.each do |medicine| %>
        <tr>
          <td>
            <%= medicine.name %>
          </td>
          <td>
            <%= medicine.number %>
          </td>
          <td>
            <%= medicine.strength %>
          </td>
          <td>
            <%= link_to(medicine.manufacturer_name, medicine_path(medicine)) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @medicines %>
    </div>

  </div>
</div>

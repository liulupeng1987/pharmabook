
<table class="table table-boldered">
  <thead>
    <tr>
      <th> User ID</th>
      <th> User email</th>
      <th> Country</th>
      <th> Company</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.id %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.country %>
      </td>
      <td>
        <%= user.company %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= will_paginate @users %>
</div>

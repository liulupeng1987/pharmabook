<%= render "searchbox" %>
<div class="container top-margin">
  <div class="row">

    <table class="table table-boldered">
      <thead>
        <tr>
          <td>Name</td>
          <td>Website</td>
          <td>Contact information</td>
        </tr>
      </thead>

      <tbody>
        <% @medicine_manufacturers.each do |medicine_manufacturer| %>
        <tr>
          <td>
            <%= medicine_manufacturer.name %>
          </td>
          <td>
            <%= medicine_manufacturer.website %>
          </td>
          <td>
            <%= simple_format(medicine_manufacturer.contact_info) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @medicine_manufacturers %>

  </div>
</div>

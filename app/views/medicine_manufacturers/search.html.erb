<%= render "searchbox" %>

<div class="container top-margin">
  <div class="row">
    <div class="alert alert-dismissable alert-success">
      <button class="close" data-dismiss="alert">x</button>
      <p> If you can't find what you want, please contact <a href="mailto:liulupeng3385@163.com?Subject=Hello%20pharmabook" target="_top">liulupeng3385@163.com</a> for help.</p>
      <p> <strong>Donate 0.99$ to make Pharmabook better! Your support means a lot for us.</strong></p>
      <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="EGMNHF43YTYC6">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_paynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
      </form>
    </div>

    <table class="table table-boldered">
      <thead>
        <tr>
          <td>ID</td>
          <td>Name</td>
          <td>Website</td>
          <td>Email</td>
          <td>contact_info</td>
        </tr>
      </thead>

      <tbody>
        <% @medicine_manufacturers.each do |medicine_manufacturer| %>
        <tr>
          <td><%= medicine_manufacturer.id %></td>
          <td><%= link_to(medicine_manufacturer.name, medicine_manufacturer_path(medicine_manufacturer)) %></td>
          <td><%= medicine_manufacturer.website %></td>
          <td><%= medicine_manufacturer.email %></td>
          <td><%= simple_format(medicine_manufacturer.contact_info) %></td>
          <% if current_user.admin? %>
            <td>
              <%= link_to("Edit", edit_admin_medicine_manufacturer_path(medicine_manufacturer)) %> |
              <%= link_to("Destroy", admin_medicine_manufacturer_path(medicine_manufacturer), :method => :delete, :data => { :confirm => "Are you sure?" }) %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= will_paginate @medicine_manufacturers %>
    </div>

  </div>
</div>
